<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Info"
      internalLogToConsole="true"
      internalLogFile="temp\internal-nlog-AspNetCore.txt">


<extensions>
  <add assembly="NLog.Web.AspNetCore"/>
  <add assembly="NLog.Database"/>
</extensions>

  <!-- the targets to write to -->
  <targets async="true">


     <target type="Database"
         name="databaseTarget"
         connectionString="Data Source=DESKTOP-JFGLEU7;Initial Catalog=ALAMEDASBD;Integrated Security=True"
         commandText="insert into dbo.ApiLog (
        MachineName, Logged, Level, Message,
        Logger, Callsite, Exception
      ) values (
        @MachineName, @Logged, @Level, @Message,
        @Logger, @Callsite, @Exception
      );">
   

    <parameter name="@MachineName" layout="${machinename}" />
    <parameter name="@Logged" layout="${date}" />
    <parameter name="@Level" layout="${level}" />
    <parameter name="@Message" layout="${message}" />
    <parameter name="@Logger" layout="${logger}" />
    <parameter name="@Callsite" layout="${callsite}" />
    <parameter name="@Exception" layout="${exception:tostring}" />
  </target>
  </targets>
  <!-- rules to map from logger name to target -->
  <rules>

    <!--Output hosting lifetime messages to console target for faster startup detection -->
    <!--<logger name="Microsoft.Hosting.Lifetime" minlevel="Info" writeTo="dbs" final="true" />-->

    <!--Skip non-critical Microsoft logs and so log only own logs (BlackHole) -->
    <logger name="Microsoft.AspNetCore.Authorization.*" minlevel="Error" maxlevel="Error" final="true" />
    <logger name="Microsoft.EntityFrameWorkCore.Infrastructure" minlevel="Error" maxlevel="Error" final="true" />
    
    <logger name="*" minlevel="Error" writeTo="databaseTarget" />
  </rules>
</nlog>